<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="3dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_adminnoti_profile"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_marginStart="10dp"
        android:src="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_admin_noti_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="sans-serif-light"
        android:text="Name"
        android:textColor="#000"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_admin_noti_email"
        app:layout_constraintStart_toEndOf="@+id/iv_adminnoti_profile"
        app:layout_constraintTop_toTopOf="@+id/iv_ladminniti_profile" />

    <TextView
        android:id="@+id/tv_admin_noti_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="sans-serif-light"
        android:text="Emailguptff080@gmail.com"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginEnd="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_adminnoti_profile"
        app:layout_constraintEnd_toStartOf="@+id/iv_admin_noti_allowaccess"
        app:layout_constraintStart_toEndOf="@+id/iv_adminnoti_profile"
        app:layout_constraintTop_toTopOf="@+id/iv_adminnoti_profile" />

    <TextView
        android:id="@+id/tv_admin_noti_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="sans-serif-light"
        android:text="user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_admin_noti_email"
        app:layout_constraintStart_toEndOf="@+id/iv_adminnoti_profile"
        app:layout_constraintTop_toTopOf="@+id/iv_adminnoti_profile"
        app:layout_constraintVertical_bias="0.84000003" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_admin_noti_allowaccess"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_check_green"
        app:layout_constraintBottom_toBottomOf="@+id/iv_adminnoti_profile"
        app:layout_constraintEnd_toStartOf="@+id/iv_admin_noti_removeaccess"
        app:layout_constraintTop_toTopOf="@+id/iv_adminnoti_profile" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_admin_noti_removeaccess"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_baseline_close_24red"
        app:layout_constraintBottom_toBottomOf="@+id/iv_adminnoti_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_adminnoti_profile" />



</androidx.constraintlayout.widget.ConstraintLayout>