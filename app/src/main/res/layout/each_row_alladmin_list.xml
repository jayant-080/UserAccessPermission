<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="2dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_ladminniti_profile"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_marginStart="10dp"
        android:src="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_listadmin_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="sans-serif-light"
        android:text="Name"
        android:textColor="#000"
        android:textSize="19sp"
        app:layout_constraintEnd_toStartOf="@+id/button_send_request"
        app:layout_constraintStart_toEndOf="@+id/iv_ladminniti_profile"
        app:layout_constraintTop_toTopOf="@+id/iv_ladminniti_profile" />

    <TextView
        android:id="@+id/tv_listadmin_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="sans-serif-light"
        android:text="Email"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_ladminniti_profile"
        app:layout_constraintEnd_toStartOf="@+id/button_send_request"
        app:layout_constraintStart_toEndOf="@+id/iv_ladminniti_profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_listadmin_name"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:id="@+id/tv_listadmin_admin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="sans-serif-light"
        android:text="Admin"
        app:layout_constraintBottom_toBottomOf="@+id/iv_ladminniti_profile"
        app:layout_constraintEnd_toStartOf="@+id/button_send_request"
        app:layout_constraintStart_toEndOf="@+id/iv_ladminniti_profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_listadmin_name"
        app:layout_constraintVertical_bias="0.72" />

    <Button
        android:id="@+id/button_send_request"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#F21515"
        android:fontFamily="sans-serif-light"
        android:text="request"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/iv_ladminniti_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_ladminniti_profile"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_send_request_green"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#0A7D45"
        android:fontFamily="sans-serif-light"
        android:text="request sent"
        android:visibility="gone"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/iv_ladminniti_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_ladminniti_profile"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/button_view_feed"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-light"
        android:text="view feed"
        android:visibility="gone"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/iv_ladminniti_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_ladminniti_profile"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>